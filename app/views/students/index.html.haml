=button_to("Register a Student", {action: "new"}, method: :get, class: "btn btn-m btn-success", id: "enroll_student")

%table.table.table-condensed{:id => "student_table"}
	%thead
		%tr
			%th Name
			%th ID
			%th
	%tbody
		- @students.each do |student|
			%tr{:id => "student_#{student.id}"}
				%td{:id => "student_#{student.id}_name"}= student.name
				
				%td= student.id

				%td=button_to("Select Student", student_enrolled_student_assignments_path(student_id: student.id), method: :get, class: "btn btn-m btn-success", id: "select_student_#{student.id}")